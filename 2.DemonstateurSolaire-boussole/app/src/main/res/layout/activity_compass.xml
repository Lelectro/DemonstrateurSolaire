<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/separatorBtnConfig"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imageViewCompass"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:src="@drawable/dial" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angle Axe X [°]:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/angleAxeX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angle Axe Z [°]:"
                android:layout_below="@id/textView2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/angleAxeZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView3"
                android:layout_below="@id/angleAxeX"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCompassCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:text="Annuler"
                android:textColor="#ab0000" />

            <Button
                android:id="@+id/btnCompassOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:text="Valider la calibration"
                android:textColor="#00ab66" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>